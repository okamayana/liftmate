<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.github.okamayana.liftmate"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".FlexApplication">
        <activity
            android:name=".ui.activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustNothing">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activities.FreeStyleActivity"
            android:label="Free Style Workout"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".ui.activities.TimeTrialActivity"
            android:label="Time Trial Workout"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>
